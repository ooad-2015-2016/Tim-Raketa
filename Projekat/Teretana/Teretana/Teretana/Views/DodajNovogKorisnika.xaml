    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:Name="image" HorizontalAlignment="Left" Height="175" Margin="23,17,0,0" VerticalAlignment="Top" Width="249"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="284,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="267" FontSize="20" PlaceholderText="IME"/>
