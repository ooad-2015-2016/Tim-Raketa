        <TextBox x:Name="textBox_Copy1" HorizontalAlignment="Left" Margin="284,153,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="267" FontSize="20" PlaceholderText="JMBG"/>
        <TextBox x:Name="textBox_Copy2" HorizontalAlignment="Left" Margin="284,197,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="267" FontSize="20" PlaceholderText="MJESTO STANOVANJA"/>
        <TextBox x:Name="textBox_Copy3" HorizontalAlignment="Left" Margin="284,241,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="267" FontSize="20" PlaceholderText="email@example.com"/>
        <RadioButton x:Name="radioButton" Content="Muško" HorizontalAlignment="Left" Margin="284,304,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButton1" Content="Žensko" HorizontalAlignment="Left" Margin="431,304,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
