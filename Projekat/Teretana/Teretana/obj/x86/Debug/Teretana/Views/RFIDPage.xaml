        <RelativePanel HorizontalAlignment="Center" Margin="320,0,310,0" Width="650" Background="#33FFFFFF">
            <Button x:ConnectionId='1' x:Name="button_Copy" Content="OK" Command="{Binding Path=OK, Mode=TwoWay}" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="155" Margin="250,230,-340,-248" Background="#33FF0000" BorderBrush="White" FontSize="18.667"                          />
            <TextBlock x:ConnectionId='2' x:Name="textBlock" HorizontalAlignment="Left" Height="70" TextWrapping="Wrap" Text="Pregled članova" VerticalAlignment="Top" Width="570" Margin="40,55,-548,-105" FontSize="29.333" TextAlignment="Center"/>
            <TextBox x:ConnectionId='3' x:Name="textBox" HorizontalAlignment="Left" Height="55" TextWrapping="Wrap" Text="{Binding Path=RFID, Mode=TwoWay}" VerticalAlignment="Top" Width="365" Margin="145,170,-439,-193" FontSize="29.333" PlaceholderText="RFID"/>

        </RelativePanel>

    </Grid>
</Page>

